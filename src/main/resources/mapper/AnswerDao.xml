<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.javahai.chatroom.dao.AnswerDao">

    <!-- 新增数据 -->
    <insert id="insert" parameterType="top.javahai.chatroom.entity.Answer">
        INSERT INTO answer (content, user_id, question_id, valid, create_time)
        VALUES (#{content}, #{userId}, #{questionId}, #{valid}, NOW())
    </insert>

    <!-- 修改数据valid -->
    <update id="updateValid" parameterType="top.javahai.chatroom.entity.Answer">
        UPDATE answer
        <set>
            <if test="valid != null">valid = #{valid},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 通过主键删除数据 -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM answer WHERE id = #{id}
    </delete>

    <!-- 通过ID查询单条数据 -->
    <select id="queryById" parameterType="int" resultType="top.javahai.chatroom.entity.Answer">
        SELECT * FROM answer WHERE id = #{id}
    </select>

    <!-- 查询所有数据 -->
    <select id="queryAll" resultType="top.javahai.chatroom.entity.Answer">
        SELECT * FROM answer
    </select>

    <!-- 通过userId查询数据 -->
    <select id="queryByUserId" parameterType="int" resultType="top.javahai.chatroom.entity.Answer">
        SELECT * FROM answer WHERE user_id = #{userId}
    </select>

    <!-- 通过questionId查询数据 -->
    <select id="queryByQuestionId" parameterType="int" resultType="top.javahai.chatroom.entity.Answer">
        SELECT * FROM answer WHERE question_id = #{questionId}
    </select>

</mapper>
